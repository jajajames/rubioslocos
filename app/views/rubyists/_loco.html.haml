%div{class: 'col-md-3'}
  =link_to(image_tag(lr.avatar_url, class: "img-responsive"), lr.html_url)
%div{class: "col-md-2"}
  =link_to lr.login, lr.html_url
%div{class: "col-md-1"}
  =lr.id
%div{class: "col-md-1"}
  =lr.followers
%div{class: "col-md-1"}
  =lr.following
%div{class: "col-md-2"}
  =lr.created_at.to_date.to_s.humanize.slice(2,9)
%div{class: "col-md-1"}
  =lr.public_repos
%div{class: "col-md-1"}
  =lr.location.to_s.split(' ').first
